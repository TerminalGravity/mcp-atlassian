# Domain (Caddy will auto-provision TLS via Let's Encrypt)
DOMAIN=jira.yourdomain.com

# Basic auth credentials
# REQUIRED: Generate hash with: docker run caddy caddy hash-password --plaintext "yourpassword"
# App will be inaccessible if this is left as placeholder!
AUTH_USER=adr
AUTH_HASH=$2a$14$REPLACE_WITH_ACTUAL_HASH

# MongoDB authentication
MONGO_USERNAME=jira
MONGO_PASSWORD=REPLACE_WITH_SECURE_PASSWORD

# Jira connection
JIRA_URL=https://alldigitalrewards.atlassian.net
JIRA_USERNAME=you@alldigitalrewards.com
JIRA_API_TOKEN=

# OpenAI (for embeddings + chat)
OPENAI_API_KEY=

# Vector sync config
VECTOR_SYNC_PROJECTS=DS,CS,AI
VECTOR_SYNC_INTERVAL_MINUTES=30

# CORS origins (comma-separated, defaults to https://$DOMAIN)
# Uncomment to override, e.g. for CDN or additional domains
# CORS_ORIGINS=https://jira.yourdomain.com,https://www.yourdomain.com
